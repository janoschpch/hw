generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  name          String?
  passwordHash  String
  homework      Homework[]
  sessions      Session[]
  shared        Shared[]
}

model Session {
  id            Int      @id @default(autoincrement())
  expiresAt     DateTime
  lastUsed      DateTime @default(now())
  token         String
  userId        Int
  deviceInfo    String   @default("Generic Device")
  user          User     @relation(fields: [userId], references: [id])
}

model Homework {
  id            Int      @id @default(autoincrement())
  user          User     @relation(fields: [userId], references: [id])
  userId        Int
  subject       String
  description   String
  createdAt     DateTime @default(now())
  done          Boolean  @default(false)
  shared        Shared[]
}

model Shared {
  id            Int      @id @default(autoincrement())
  homeworkId    Int
  homework      Homework @relation(fields: [homeworkId], references: [id])
  userId        Int
  user          User     @relation(fields: [userId], references: [id])
  accessToken   String
  isShared      Boolean  @default(false)
  views         Int      @default(0)
}